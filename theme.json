{
    "version": 2,

    "settings": {
        "appearanceTools": true,
        "radius": true,
        "spacing": {
            "margin": true,
            "padding": true
        },
        "custom": {
            "line-height": {
                "body": 1.7,
                "heading": 1.3
            }
        },
        "layout": {
            "contentSize": "calc(1440px - 2rem)",
            "wideSize": "1440px"
        },
        "typography": {
            "fluid": true,
            "letterSpacing": true,
            "fontFamilies": [
                {
                    "fontFamily": "Inria",
                    "slug": "inria",
                    "name": "Inria Sans",
                    "fontFace": [
                        {
                            "fontFamily": "Inria",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/inria-sans.woff2"]
                        },

                        {
                            "fontFamily": "Inria",
                            "fontWeight": "400",
                            "fontStyle": "italic",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/inria-sans-italic.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Inria",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/inria-sans-bold.woff2"]
                        }
                    ]
                },
                {
                    "fontFamily": "Tahu!",
                    "slug": "tahu",
                    "name": "Tahu!",
                    "fontFace": [
                        {
                            "fontFamily": "Tahu!",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/tahu.woff2"]
                        }
                    ]
                }
            ]
        }
    },
    "styles": {
        "spacing": {
            "margin": {
                "bottom": "60px"
            },
            "padding": {
                "left": "1rem",
                "right": "1rem",
                "bottom": "2rem"
            }
        },
        "elements": {
            "link": {
                "typography": {
                    "textDecoration": "none"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "test",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": ["page", "post"]
        },
        {
            "name": "no-header",
            "title": "Kein Seitenkopf",
            "postTypes": ["page", "post"]
        },
        {
            "name": "single-event",
            "title": "Event",
            "postTypes": ["event"]
        }
    ]
}
